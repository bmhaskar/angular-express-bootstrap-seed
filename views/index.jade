extends layout

block body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        a.brand(href='#') My First BootStrap Experience
        ul.nav
          li.divider-vertical
            a(href='about-me') About Me
          li.divider-vertical
            a(href='tech-blogs') Tech Blog Posts
  .container-fluid
    div(ng-controller='AppCtrl')
      .hero-unit
        h2 Welcome to {{name}}'s blog
      div(ng-view)
    hr
    div
      | Angular seed app: v
      span(app-version)

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/jquery/jquery-1.9.1.min.js')
  script(src='bootstrap/js/bootstrap.min.js')
